---
import Dropdown from "./Dropdown.astro";

// interface Props {
//   animeData: Array<Object>;
// }

const { animeData } = Astro.props;
---

<header class="encabezado">
  <a class="titulo" href="../index.html">
    <img
      class="logo"
      src="/assets/images/logo_afs.png"
      alt="Logo de Anime First Steps"
    />
    <h1>Anime First Steps</h1>
  </a>
  <nav>
    {
      animeData.map((element) => {
        return (
          <Dropdown genreName={element.genre} animeList={element.animeList} />
        );
      })
    }
  </nav>
</header>

<style>
  header {
    display: flex;
    place-content: space-between;
    place-items: center;
    font-family: "Righteous", sans-serif;
    font-weight: 500;
    position: sticky;
    top: 0;
    height: 5rem;
    width: 100%;
    padding: 0 4rem;
    background-color: var(--primary);
    box-shadow: 0px 0px 20px black;
    z-index: 2;
  }

  a.titulo {
    display: flex;
    place-items: center;
    gap: 1rem;
    text-decoration: none;
  }

  a.titulo .logo {
    height: 4rem;
  }

  .encabezado h1 {
    font-size: 2rem;
    color: var(--accent);
    transition: all 0.3s ease;
  }

  .encabezado > a:is(:hover, :focus) > h1 {
    color: white;
    text-shadow: 0 0 20px var(--accent);
  }

  nav {
    color: var(--accent);
    display: flex;
    gap: 0.8rem;
  }
</style>
